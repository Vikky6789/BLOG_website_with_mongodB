<a href="/dashboard">&larr;Back</a>
<div class="admin-title">
    <h2>View/Edit Post</h2>
</div>

<form action="/delete-post/<%= data._id %>?_method=DELETE"method="POST">
    <input type="submit" value="Delete" class="btn-delete btn styledelbtn">
</form>

<form action="/edit-post/<%= data._id %>?_method=PUT"method="POST">
    <label for="title"><b>Title</b></label>
    <input type="text"placeholder="Post Title"name="title" required value="<%= data.title %>">
    <label for="body"><b>Contents</b></label>
    <textarea name="body"cols="50" rows="10"required ><%= data.body %></textarea>
    <input type="submit"value="Update"class="btn">
</form>